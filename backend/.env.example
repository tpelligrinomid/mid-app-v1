# Supabase Configuration
# Note: We do NOT use the service role key - Lovable manages Supabase
# All operations go through the authenticated user's client (respects RLS)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# ClickUp Integration (API Token, not OAuth)
CLICKUP_API_TOKEN=your-clickup-api-token

# QuickBooks Integration (OAuth)
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=https://mid-app-v1.onrender.com/api/auth/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=production

# HubSpot Integration
HUBSPOT_API_KEY=your-hubspot-api-key

# Server Configuration
PORT=3001

# Frontend URL (for CORS and OAuth redirects)
# Set this to your Lovable app URL
FRONTEND_URL=https://your-app.lovable.app
